<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>User info</h1>

      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
      <div>
        <label for="user_name">Name</label>
      </div>
      <div>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "名前", class: 'form-control' %>
      </div>
      <div>
        <label for="user_image">Image</label>
      </div>
      <div>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div>
        <lavel for="user_introduction">Introduction</lavel>
      </div>
      <div>
        <%= f.text_area :introduction, id:"inputIntroduction", placeholder: "自己紹介文", class: 'form-control'%>
      </div>
      <div>
        <%= f.submit "Update User", class: 'btn btn-secondary' %>
      </div>
      <% end %>

    </div>
  </div>
</div>