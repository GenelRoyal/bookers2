<% if book.errors.any? %>
  <h3><%= book.errors.count %> errors prohibited this obj from belong saved:</h3>
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<%= link_to "ユーザー編集", edit_user_path(user) %>

<h2>New book</h2>
<%= form_with model: book do |f| %>
<div>
  <label for="book_title">Title</label><br>
  <%= f.text_field :title %>
</div>
<div>
  <label for="book_opinion">Opinion</label><br>
  <%= f.text_area :body %>
</div>
<div>
  <%= f.submit 'Create Book' %>
</div>
<% end %>